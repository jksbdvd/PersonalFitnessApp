@page "/lessons"

<PageTitle>Lessons</PageTitle>
<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #000;
        color: #fff;
        margin: 0;
        padding: 0;
    }

    h1 {
        text-align: center;
        color: #FFD700;
        font-size: 2.5rem;
        margin: 20px 0;
    }

    .iframe-container {
        display: flex;
        justify-content: center;
        gap: 20px;
        flex-wrap: wrap;
        margin: 30px 0;
    }

        .iframe-container iframe {
            border: 2px solid #FFD700;
            border-radius: 8px;
            transition: transform 0.3s ease;
        }

            .iframe-container iframe:hover {
                transform: scale(1.05);
            }

    @@media (max-width: 768px) {
        .iframe-container

    {
        flex-direction: column;
        align-items: center;
    }

    .iframe-container iframe {
        width: 100%;
        max-width: 320px;
        margin-bottom: 20px;
    }

    }
</style>

<h1>Video Lessons</h1>
<div class="iframe-container">
    <iframe src="https://www.youtube.com/embed/VWj8ZxCxrYk" frameborder="0"></iframe>
    <iframe src="https://www.youtube.com/embed/qULTwquOuT4" frameborder="0"></iframe>
    <iframe src="https://www.youtube.com/embed/tj0o8aH9vJw" frameborder="0"></iframe>
</div>